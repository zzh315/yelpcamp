<% layout('layouts/boilerplate') %>


<div id="cluster-map"></div>

<h1>All Campgrounds</h1>
<a href="/campgrounds/new">Create a New campground</a>


<% for(let camp of campgrounds){ %>

<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(camp.images.length){ %>
            <img class="img-fluid" src="<%= camp.images[0].cardImage %> %>" alt="" crossorigin="">
            <% }else { %>
            <img src="https://res.cloudinary.com/dg3rzpkpl/image/upload/v1680675613/YelpSeed/nick-dunn-OzUJa5Q9m1g-unsplash_e8ju1g.jpg"
                alt="" crossorigin="">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <%= camp.title %>
                </h5>
                <p class="card-text"><%= camp.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= camp.location %></small>
                </p>
                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features:<%- JSON.stringify(campgrounds) %>}
    // because the data: thing in the clusterMap js setup takes in an object  with features key inside that contains the geodata.
</script>
<script src="/javascripts/clusterMap.js"></script>